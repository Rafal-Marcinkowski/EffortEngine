<mah:MetroContentControl
    x:Class="EffortEngine.MVVM.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:Conv="clr-namespace:SharedProject.Converters;assembly=SharedProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    Dialog:DialogParticipation.Register="{Binding}"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            Style="{StaticResource TextBlockStyle}"
            Text="Ustawienia Pomodoro" />

        <StackPanel Grid.Row="1" Width="400" VerticalAlignment="Center">
            <Label Content="Czas pracy (minuty):" Style="{StaticResource MahApps.Styles.Label}"
                   FontSize="16"
                   HorizontalAlignment="Center"/>
            <mah:NumericUpDown
                Interval="1"
                Maximum="120"
                MinWidth="100"
                HorizontalAlignment="Center"
                Minimum="1"
                StringFormat="N0"
                Value="{Binding WorkDurationMinutes}" />

            <Label
                Margin="0,10,0,0"
                FontSize="16"
                HorizontalAlignment="Center"
                Content="Czas przerwy (minuty):"
                Style="{StaticResource MahApps.Styles.Label}" />
            <mah:NumericUpDown
                Interval="1"
                MinWidth="100"
                Maximum="30"
                HorizontalAlignment="Center"
                Minimum="1"
                StringFormat="N0"
                Value="{Binding BreakDurationMinutes}" />

            <Label
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                FontSize="16"
                Content="Liczba rund przed długą przerwą:"
                Style="{StaticResource MahApps.Styles.Label}" />
            <mah:NumericUpDown
                Interval="1"
                Maximum="10"
                MinWidth="100"
                HorizontalAlignment="Center"
                Minimum="1"
                StringFormat="N0"
                Value="{Binding RoundsCount}" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0,0,10,0"
                Command="{Binding ResetToDefaultsCommand}"
                Content="Przywróć domyślne"
                Style="{StaticResource MahApps.Styles.Button}" />

            <Button
                Command="{Binding SaveCommand}"
                Content="Zapisz ustawienia"
                Style="{StaticResource MahApps.Styles.Button}" />
        </StackPanel>
    </Grid>
</mah:MetroContentControl>