<mah:MetroContentControl
    x:Class="EffortEngine.MVVM.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Dialog:DialogParticipation.Register="{Binding}"
    d:DesignHeight="400"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <Border
        Margin="10"
        Padding="30"
        Background="{DynamicResource MahApps.Brushes.Control.Background}"
        BorderBrush="{DynamicResource MahApps.Brushes.Separator}"
        BorderThickness="1"
        CornerRadius="16"
        Effect="{DynamicResource MahApps.Effects.Shadow}">

        <StackPanel
            Width="300"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="20"
                FontWeight="Bold"
                Foreground="{DynamicResource MahApps.Brushes.Text}"
                Text="Ustawienia Pomodoro"
                TextAlignment="Center" />

            <StackPanel Margin="0,0,0,5">
                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource MahApps.Brushes.Text}"
                    Text="Czas pracy (minuty):"
                    TextAlignment="Center" />
                <mah:NumericUpDown
                    Width="150"
                    HorizontalAlignment="Center"
                    Interval="1"
                    Maximum="120"
                    Minimum="1"
                    StringFormat="N0"
                    Value="{Binding WorkDurationMinutes}" />
            </StackPanel>

            <StackPanel Margin="0,0,0,5">
                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource MahApps.Brushes.Text}"
                    Text="Czas przerwy (minuty):"
                    TextAlignment="Center" />
                <mah:NumericUpDown
                    Width="150"
                    HorizontalAlignment="Center"
                    Interval="1"
                    Maximum="30"
                    Minimum="1"
                    StringFormat="N0"
                    Value="{Binding BreakDurationMinutes}" />
            </StackPanel>

            <StackPanel Margin="0,0,0,5">
                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource MahApps.Brushes.Text}"
                    Text="Ilość rund:"
                    TextAlignment="Center" />
                <mah:NumericUpDown
                    Width="150"
                    HorizontalAlignment="Center"
                    Interval="1"
                    Maximum="10"
                    Minimum="1"
                    StringFormat="N0"
                    Value="{Binding RoundsCount}" />
            </StackPanel>

            <StackPanel
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="140"
                    Margin="0,0,10,0"
                    Command="{Binding ResetToDefaultsCommand}"
                    Content="Przywróć domyślne" />
                <Button
                    Width="140"
                    Command="{Binding SaveCommand}"
                    Content="Zapisz ustawienia" />
            </StackPanel>
        </StackPanel>
    </Border>
</mah:MetroContentControl>
