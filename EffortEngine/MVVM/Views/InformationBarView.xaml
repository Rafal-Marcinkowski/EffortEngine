<mah:MetroContentControl 
             x:Class="EffortEngine.MVVM.Views.InformationBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EffortEngine.MVVM.Views"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:Conv="clr-namespace:SharedProject.Converters;assembly=SharedProject"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock 

            Text="{Binding  WorkManager.PomodoroTimer.CurrentTaskText}" 
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="16"
            Foreground="Black"
            FontFamily="Calibri"
            FontWeight="DemiBold"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            
            <Border BorderBrush="DimGray" BorderThickness="3" Grid.Column="0" Margin="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <TextBlock Grid.Column="0"
                            FontSize="22"
                         Height="auto"
                           Padding="5"
                         Foreground="Black"
                         FontFamily="Calibri"
                         FontWeight="DemiBold"
            Text="{Binding WorkManager.PomodoroTimer.RoundCounter}"/>
            </Border>
            
            <Border BorderBrush="DimGray" BorderThickness="3" Grid.Column="1" Margin="0"
                    VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock 
            Text="{Binding  WorkManager.PomodoroTimer.TimerDisplay}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="34"
                    Padding="5"
            Height="auto"
            Foreground="Black"
            FontFamily="Calibri"
            FontWeight="DemiBold"/>
            </Border>
            
        <Button 
            Height="auto"
            Width="auto"
            Grid.Column="2"
            VerticalAlignment="Center"
            Style="{StaticResource SmallButtonStyle}"
            Command="{Binding  WorkManager.PomodoroTimer.StartPauseCommand}"
            >
            
            <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="{Binding  WorkManager.PomodoroTimer.StartPauseIcon}" Width="25" Height="25"/>
                    <TextBlock Text="{Binding  WorkManager.PomodoroTimer.StartPauseText}" Margin="5,4,0,0"
                           FontFamily="Calibri"
                           FontWeight="DemiBold"
                           FontSize="14"/>
            </StackPanel>
            
        </Button>
            
        <Button 
            Command="{Binding  WorkManager.SessionManager.FinishSessionCommand}"
            Height="auto"
            VerticalAlignment="Center"
            Grid.Column="3"
            Style="{StaticResource SmallButtonStyle}"
            Width="auto"
            Margin="5,0,0,0"
            >
            
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconOcticons Kind="MoveToEnd16" Width="25" Height="25"/>
                <TextBlock Text="Zakończ sesję" Margin="5,4,0,0"
                           FontFamily="Calibri"
                           FontWeight="DemiBold"
                           FontSize="14"/>
            </StackPanel>
            
        </Button>
        </Grid>
            
    </Grid>

</mah:MetroContentControl>
