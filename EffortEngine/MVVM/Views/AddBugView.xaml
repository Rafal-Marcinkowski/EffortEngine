<mah:MetroContentControl 
             x:Class="EffortEngine.MVVM.Views.AddBugView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EffortEngine.MVVM.Views"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:Conv="clr-namespace:SharedProject.Converters;assembly=SharedProject"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center">

            <TextBlock 
            Text="Program: " 
            Foreground="Black"
            FontSize="24"
            Style="{StaticResource TextBlockStyle}"/>

            <TextBlock 
            Text="{Binding SelectedProgram}"
            Foreground="Black"
            Style="{StaticResource TextBlockStyle}"/>

        </DockPanel>

        <Button 
        Command="{Binding ConfirmCompanySelectionCommand}"
        CommandParameter="{Binding ElementName=companyListBox, Path=SelectedItem}"
        Grid.Row="1" Style="{StaticResource BigButtonStyle}" Width="auto" Height="auto">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock 
                    Text="Wybierz program" 
                    FontSize="22"
                    Height="35"
                    Foreground="Black"
                    Style="{StaticResource TextBlockStyle}"/>

                <ListBox x:Name="companyListBox" BorderBrush="DimGray"
                         BorderThickness="2" Width="200" Height="180"
                         ItemsSource="{Binding FilteredCompanies}"
                         IsHitTestVisible="True">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <prism:InvokeCommandAction Command="{Binding ConfirmCompanySelectionCommand}"
                            CommandParameter="{Binding ElementName=companyListBox, Path=SelectedItem}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock 
                                Text="{Binding CompanyName}" 
                                Grid.Column="0"
                                FontSize="12"
                                Style="{StaticResource TextBlockStyle}"/>

                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </StackPanel>
        </Button>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" HorizontalAlignment="Center">

                <TextBlock 
             Text="Nazwa buga: "
             FontSize="22"
             Height="auto"
             Foreground="Black"   
             Style="{StaticResource TextBlockStyle}"/>
                <TextBlock 
             Text="{Binding SelectedProgram}"
             Style="{StaticResource TextBlockStyle}"/>

                <TextBox 
                x:Name="featureNameTextBox"
                FontSize="16"
                VerticalContentAlignment="Center"
                Width="300"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding FeatureName}"/>

            </DockPanel>

            <DockPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock 
             Text="Opis: "
             Height="auto"   
             FontSize="22"
                Foreground="black"
             Style="{StaticResource TextBlockStyle}"/>
                <TextBlock 
             Text="{Binding FeatureDescription}"
             Style="{StaticResource TextBlockStyle}"/>

                <TextBox 
                x:Name="featureDescriptionTextBox"
                Width="300"
                FontSize="14"
                Height="auto"
                TextWrapping="Wrap"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding FeatureTitle}"/>

            </DockPanel>

            <DockPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock 
             Text="Priorytet: "
             Height="auto"
             Foreground="Black"
             FontSize="22"
             Style="{StaticResource TextBlockStyle}"/>
                <TextBlock 
             Text="{Binding FeatureDescription}"
             Style="{StaticResource TextBlockStyle}"/>

                <ComboBox 
                Width="150"
                Height="30"
                BorderBrush="DimGray"
                BorderThickness="2"
                Controls:ControlsHelper.FocusBorderBrush="Black"
                Controls:ControlsHelper.CornerRadius="7" 
                Controls:ControlsHelper.MouseOverBorderBrush="Gray"
                SelectedItem="{Binding SelectedPriority, Mode=TwoWay}"
                FontFamily="Calibri"
                FontWeight="DemiBold"
                HorizontalContentAlignment="Center">

                    <ComboBoxItem>Niski</ComboBoxItem>
                    <ComboBoxItem>Średni</ComboBoxItem>
                    <ComboBoxItem>Wysoki</ComboBoxItem>
                </ComboBox>

                <Button
                Style="{StaticResource BigButtonStyle}"
                Command="{Binding AddProgrammingTaskCommand}"
                Width="100"
                Margin="50,0,0,0">
                    <iconPacks:PackIconMaterial Kind="BugCheck" Width="30" Height="30"/>
                </Button>

            </DockPanel>

        </Grid>

    </Grid>

</mah:MetroContentControl>
