<mah:MetroContentControl 
             x:Class="EffortEngine.MVVM.Views.AddBugView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EffortEngine.MVVM.Views"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:Conv="clr-namespace:SharedProject.Converters;assembly=SharedProject"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock 
            Text="Program: " 
            Foreground="Black"
            FontSize="26"
            Style="{StaticResource TextBlockStyle}"
            Height="auto"/>
            <TextBlock 
            Text="{Binding SelectedProgram.Name}"
            Foreground="Black"
            Style="{StaticResource TextBlockStyle}"
            Height="auto"/>
        </DockPanel>

        <StackPanel Grid.Row="1" Grid.Column="0">
            
        <ListBox 
        x:Name="programsListBox"
        BorderBrush="DimGray"
        BorderThickness="2"
        Width="250"
        Height="auto"
        ItemsSource="{Binding Programs}"
        IsHitTestVisible="True">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <prism:InvokeCommandAction 
                    Command="{Binding ConfirmProgramSelectionCommand}"
                    CommandParameter="{Binding ElementName=programsListBox, Path=SelectedItem}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock 
                    Text="{Binding Name}" 
                    FontSize="12"
                    Style="{StaticResource TextBlockStyle}"
                    HorizontalAlignment="Left"
                    Margin="5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button 
        Command="{Binding ConfirmProgramSelectionCommand}"
        CommandParameter="{Binding ElementName=programsListBox, Path=SelectedItem}"
        Style="{StaticResource BigButtonStyle}"
        Width="auto"
        Height="50">
            <TextBlock 
            Text="Wybierz program" 
            FontSize="22"
            Foreground="Black"
            Style="{StaticResource TextBlockStyle}"/>
        </Button>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            
            <StackPanel Orientation="Horizontal">
                <TextBlock 
                Text="Nazwa buga: "
                FontSize="22"
                Foreground="Black"
                Style="{StaticResource TextBlockStyle}"/>
                <TextBox 
                x:Name="bugNameTextBox"
                FontSize="16"
                VerticalContentAlignment="Center"
                Width="300"
                MinHeight="50"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding BugName}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock 
                Text="Opis: "
                FontSize="22"
                Foreground="Black"
                Style="{StaticResource TextBlockStyle}"/>
                <TextBox 
                x:Name="bugDescriptionTextBox"
                Width="300"
                FontSize="14"
                MinHeight="100"
                TextWrapping="Wrap"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding BugDescription}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                
                <TextBlock 
                Text="Priorytet: "
                FontSize="22"
                Foreground="Black"
                Style="{StaticResource TextBlockStyle}"/>
                <ComboBox 
                Width="150"
                Height="30"
                BorderBrush="DimGray"
                BorderThickness="2"
                Controls:ControlsHelper.FocusBorderBrush="Black"
                Controls:ControlsHelper.CornerRadius="7" 
                Controls:ControlsHelper.MouseOverBorderBrush="Gray"
                SelectedValue="{Binding BugPriority, UpdateSourceTrigger=PropertyChanged}"
                SelectedValuePath="Content"
                FontFamily="Calibri"
                FontWeight="DemiBold"
                HorizontalContentAlignment="Center">
                    <ComboBoxItem>Niski</ComboBoxItem>
                    <ComboBoxItem>Średni</ComboBoxItem>
                    <ComboBoxItem>Wysoki</ComboBoxItem>
                </ComboBox>
                <Button
                Style="{StaticResource BigButtonStyle}"
                Command="{Binding AddBugCommand}"
                Width="90"
                Height="auto"
                Margin="50,0,0,0">
                    <iconPacks:PackIconMaterial Kind="BugCheck" Width="30" Height="30"/>
                </Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>

</mah:MetroContentControl>
