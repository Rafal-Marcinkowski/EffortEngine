<mah:MetroContentControl
    x:Class="EffortEngine.MVVM.Views.AddProgrammingTaskView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Conv="clr-namespace:SharedProject.Converters;assembly=SharedProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:EffortEngine.MVVM.Views"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    d:DesignHeight="500"
    d:DesignWidth="700"
    mc:Ignorable="d">

    <mah:MetroContentControl.Resources>
        <Conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <Style x:Key="FormLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,8,8,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="100"/>
        </Style>

        <Style x:Key="FormInputStyle" TargetType="Control">
            <Setter Property="Margin" Value="0,4,0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </mah:MetroContentControl.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" 
                   Visibility="{Binding IsProgramSelectableVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Wybierz program:" 
                           FontSize="16" 
                           Margin="0,0,8,0"
                           VerticalAlignment="Center"/>

                <ComboBox Width="250"
                          ItemsSource="{Binding Programs}"
                          SelectedItem="{Binding SelectedProgram}"
                          DisplayMemberPath="Name"
                          mah:TextBoxHelper.Watermark="Wybierz program..."/>

                <Button Command="{Binding ConfirmProgramSelectionCommand}"
                        Content="Potwierdź"
                        Margin="8,0,0,0"
                        Width="100"
                        Style="{StaticResource MahApps.Styles.Button}"/>
            </StackPanel>
        </DockPanel>

        <mah:MetroTabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex}">

            <mah:MetroTabItem Header="Bug">
                <ScrollViewer>
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <iconPacks:PackIconBoxIcons Kind="SolidBug" Width="24" Height="24" Margin="0,0,8,0"/>
                            <TextBlock Text="Dodaj nowego buga" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Nazwa:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding TaskName}"
                                     mah:TextBoxHelper.Watermark="Wprowadź nazwę..."
                                     Style="{StaticResource FormInputStyle}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Opis:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding TaskDescription}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="80"
                                     mah:TextBoxHelper.Watermark="Wprowadź opis..."
                                     Style="{StaticResource FormInputStyle}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Priorytet:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                <ComboBox Width="180"
                                          SelectedItem="{Binding TaskPriority}">
                                    <ComboBoxItem Content="Niski"/>
                                    <ComboBoxItem Content="Średni"/>
                                    <ComboBoxItem Content="Wysoki"/>
                                </ComboBox>

                                <Button Command="{Binding AddBugCommand}"
                                        Content="Dodaj"
                                        Margin="12,0,0,0"
                                        Width="120"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource MahApps.Styles.Button}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </mah:MetroTabItem>

            <mah:MetroTabItem Header="Moduł">
                <ScrollViewer>
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <iconPacks:PackIconLucide Kind="Package2" Width="24" Height="24" Margin="0,0,8,0"/>
                            <TextBlock Text="Dodaj nowy moduł" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Nazwa:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding TaskName}"
                                     mah:TextBoxHelper.Watermark="Wprowadź nazwę..."
                                     Style="{StaticResource FormInputStyle}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Opis:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding TaskDescription}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="80"
                                     mah:TextBoxHelper.Watermark="Wprowadź opis..."
                                     Style="{StaticResource FormInputStyle}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Priorytet:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                <ComboBox Width="180"
                                          SelectedItem="{Binding TaskPriority}">
                                    <ComboBoxItem Content="Niski"/>
                                    <ComboBoxItem Content="Średni"/>
                                    <ComboBoxItem Content="Wysoki"/>
                                </ComboBox>

                                <Button Command="{Binding AddModuleCommand}"
                                        Content="Dodaj"
                                        Margin="12,0,0,0"
                                        Width="120"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource MahApps.Styles.Button}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </mah:MetroTabItem>

            <mah:MetroTabItem Header="Funkcja">
                <ScrollViewer>
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="FeatureSearchOutline" Width="24" Height="24" Margin="0,0,8,0"/>
                            <TextBlock Text="Dodaj nową funkcję" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Nazwa:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding TaskName}"
                                     mah:TextBoxHelper.Watermark="Wprowadź nazwę..."
                                     Style="{StaticResource FormInputStyle}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Opis:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding TaskDescription}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="80"
                                     mah:TextBoxHelper.Watermark="Wprowadź opis..."
                                     Style="{StaticResource FormInputStyle}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Priorytet:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                <ComboBox Width="180"
                                          SelectedItem="{Binding TaskPriority}">
                                    <ComboBoxItem Content="Niski"/>
                                    <ComboBoxItem Content="Średni"/>
                                    <ComboBoxItem Content="Wysoki"/>
                                </ComboBox>

                                <Button Command="{Binding AddFeatureCommand}"
                                        Content="Dodaj"
                                        Margin="12,0,0,0"
                                        Width="120"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource MahApps.Styles.Button}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </mah:MetroTabItem>

            <mah:MetroTabItem Header="Program">
                <ScrollViewer>
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <iconPacks:PackIconFontAwesome Kind="DiagramProjectSolid" Width="24" Height="24" Margin="0,0,8,0"/>
                            <TextBlock Text="Dodaj nowy program" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Nazwa:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding TaskName}"
                                     mah:TextBoxHelper.Watermark="Wprowadź nazwę..."
                                     Style="{StaticResource FormInputStyle}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Opis:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding TaskDescription}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="80"
                                     mah:TextBoxHelper.Watermark="Wprowadź opis..."
                                     Style="{StaticResource FormInputStyle}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Priorytet:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                <ComboBox Width="180"
                                          SelectedItem="{Binding TaskPriority}">
                                    <ComboBoxItem Content="Niski"/>
                                    <ComboBoxItem Content="Średni"/>
                                    <ComboBoxItem Content="Wysoki"/>
                                </ComboBox>

                                <Button Command="{Binding AddProgramProjectCommand}"
                                        Content="Dodaj"
                                        Margin="12,0,0,0"
                                        Width="120"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource MahApps.Styles.Button}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </mah:MetroTabItem>
        </mah:MetroTabControl>
    </Grid>
</mah:MetroContentControl>