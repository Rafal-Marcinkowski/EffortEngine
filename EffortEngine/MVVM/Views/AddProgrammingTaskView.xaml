<mah:MetroContentControl
    x:Class="EffortEngine.MVVM.Views.AddProgrammingTaskView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Dialog:DialogParticipation.Register="{Binding}"
    d:DesignHeight="500"
    d:DesignWidth="700"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <mah:MetroTabControl
            mah:HeaderedControlHelper.HeaderFontSize="22"
            mah:HeaderedControlHelper.HeaderFontWeight="DemiBold"
            SelectedIndex="{Binding SelectedTabIndex}">

            <mah:MetroTabItem Header="Bug">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ScrollViewer
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        VerticalScrollBarVisibility="Disabled">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <iconPacks:PackIconBoxIcons
                                    Width="30"
                                    Height="30"
                                    Margin="0,0,8,0"
                                    Kind="SolidBug" />
                                <TextBlock
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Text="Nowy bug" />
                                <ComboBox
                                    Width="200"
                                    Margin="20,0,0,0"
                                    mah:TextBoxHelper.Watermark="Wybierz program"
                                    DisplayMemberPath="Name"
                                    ItemsSource="{Binding Programs}"
                                    SelectedItem="{Binding SelectedProgram}" />
                            </StackPanel>

                            <Grid Grid.Row="1" Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    Style="{StaticResource MahApps.Styles.TextBlock}"
                                    Text="Nazwa:" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Text="{Binding TaskName}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontWeight="DemiBold"
                                    Style="{StaticResource MahApps.Styles.TextBlock}"
                                    Text="Opis:" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    MinHeight="80"
                                    Margin="0,8,0,8"
                                    FontSize="14"
                                    Style="{StaticResource MahApps.Styles.TextBox}"
                                    Text="{Binding TaskDescription}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    Style="{StaticResource MahApps.Styles.TextBlock}"
                                    Text="Priorytet:" />
                                <StackPanel
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                                    <ComboBox
                                        Width="180"
                                        SelectedValue="{Binding TaskPriority}"
                                        SelectedValuePath="Content">
                                        <ComboBoxItem Content="Niski" />
                                        <ComboBoxItem Content="Średni" />
                                        <ComboBoxItem Content="Wysoki" />
                                    </ComboBox>

                                    <Button
                                        Width="120"
                                        Margin="12,0,0,0"
                                        Command="{Binding AddTaskCommand}"
                                        Content="Dodaj buga" />
                                    <Button
                                        Width="100"
                                        Margin="8,0,0,0"
                                        Command="{Binding ResetCommand}"
                                        Content="Resetuj" />
                                </StackPanel>

                            </Grid>
                        </Grid>
                    </ScrollViewer>

                </Grid>
            </mah:MetroTabItem>

            <mah:MetroTabItem Header="Funkcja">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ScrollViewer
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        VerticalScrollBarVisibility="Disabled">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <iconPacks:PackIconMaterial
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,8,0"
                                    Kind="FeatureSearchOutline" />
                                <TextBlock
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Text="Nowa funkcja" />
                                <ComboBox
                                    Width="200"
                                    Margin="20,0,0,0"
                                    mah:TextBoxHelper.Watermark="Wybierz program"
                                    DisplayMemberPath="Name"
                                    ItemsSource="{Binding Programs}"
                                    SelectedItem="{Binding SelectedProgram}" />
                            </StackPanel>

                            <Grid Grid.Row="1" Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    Style="{StaticResource MahApps.Styles.TextBlock}"
                                    Text="Nazwa:" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Text="{Binding TaskName}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontWeight="DemiBold"
                                    Style="{StaticResource MahApps.Styles.TextBlock}"
                                    Text="Opis:" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    MinHeight="80"
                                    Margin="0,8,0,8"
                                    FontSize="14"
                                    Style="{StaticResource MahApps.Styles.TextBox}"
                                    Text="{Binding TaskDescription}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    Style="{StaticResource MahApps.Styles.TextBlock}"
                                    Text="Priorytet:" />
                                <StackPanel
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                                    <ComboBox
                                        Width="180"
                                        SelectedValue="{Binding TaskPriority}"
                                        SelectedValuePath="Content">
                                        <ComboBoxItem Content="Niski" />
                                        <ComboBoxItem Content="Średni" />
                                        <ComboBoxItem Content="Wysoki" />
                                    </ComboBox>

                                    <Button
                                        Width="120"
                                        Margin="12,0,0,0"
                                        Command="{Binding AddTaskCommand}"
                                        Content="Dodaj funkcję" />
                                    <Button
                                        Width="100"
                                        Margin="8,0,0,0"
                                        Command="{Binding ResetCommand}"
                                        Content="Resetuj" />
                                </StackPanel>

                            </Grid>
                        </Grid>
                    </ScrollViewer>

                </Grid>
            </mah:MetroTabItem>

            <mah:MetroTabItem Header="Moduł">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ScrollViewer
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        VerticalScrollBarVisibility="Disabled">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <iconPacks:PackIconLucide
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,8,0"
                                    Kind="Package2" />
                                <TextBlock
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Text="Nowy moduł" />
                                <ComboBox
                                    Width="200"
                                    Margin="20,0,0,0"
                                    mah:TextBoxHelper.Watermark="Wybierz program"
                                    DisplayMemberPath="Name"
                                    ItemsSource="{Binding Programs}"
                                    SelectedItem="{Binding SelectedProgram}" />
                            </StackPanel>

                            <Grid Grid.Row="1" Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    Style="{StaticResource MahApps.Styles.TextBlock}"
                                    Text="Nazwa:" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Text="{Binding TaskName}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontWeight="DemiBold"
                                    Style="{StaticResource MahApps.Styles.TextBlock}"
                                    Text="Opis:" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    MinHeight="80"
                                    Margin="0,8,0,8"
                                    FontSize="14"
                                    Style="{StaticResource MahApps.Styles.TextBox}"
                                    Text="{Binding TaskDescription}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    Style="{StaticResource MahApps.Styles.TextBlock}"
                                    Text="Priorytet:" />
                                <StackPanel
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                                    <ComboBox
                                        Width="180"
                                        SelectedValue="{Binding TaskPriority}"
                                        SelectedValuePath="Content">
                                        <ComboBoxItem Content="Niski" />
                                        <ComboBoxItem Content="Średni" />
                                        <ComboBoxItem Content="Wysoki" />
                                    </ComboBox>

                                    <Button
                                        Width="120"
                                        Margin="12,0,0,0"
                                        Command="{Binding AddTaskCommand}"
                                        Content="Dodaj moduł" />
                                    <Button
                                        Width="100"
                                        Margin="8,0,0,0"
                                        Command="{Binding ResetCommand}"
                                        Content="Resetuj" />
                                </StackPanel>

                            </Grid>
                        </Grid>
                    </ScrollViewer>

                </Grid>
            </mah:MetroTabItem>

            <mah:MetroTabItem Header="Program">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ScrollViewer
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        VerticalScrollBarVisibility="Disabled">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <iconPacks:PackIconFontAwesome
                                    Width="24"
                                    Height="24"
                                    Margin="58,0,8,0"
                                    Kind="DiagramProjectSolid" />
                                <TextBlock
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Text="Nowy program" />
                            </StackPanel>

                            <Grid Grid.Row="1" Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    Style="{StaticResource MahApps.Styles.TextBlock}"
                                    Text="Nazwa:" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Text="{Binding TaskName}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontWeight="DemiBold"
                                    Style="{StaticResource MahApps.Styles.TextBlock}"
                                    Text="Opis:" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    MinHeight="80"
                                    Margin="0,8,0,8"
                                    FontSize="14"
                                    Style="{StaticResource MahApps.Styles.TextBox}"
                                    Text="{Binding TaskDescription}" />

                                <StackPanel
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                                    <Button
                                        Width="120"
                                        Margin="10,0,0,0"
                                        Command="{Binding AddProgramCommand}"
                                        Content="Dodaj program" />
                                    <Button
                                        Width="100"
                                        Margin="8,0,0,0"
                                        Command="{Binding ResetCommand}"
                                        Content="Resetuj" />
                                </StackPanel>

                            </Grid>
                        </Grid>
                    </ScrollViewer>

                </Grid>
            </mah:MetroTabItem>
        </mah:MetroTabControl>
    </Grid>
</mah:MetroContentControl>