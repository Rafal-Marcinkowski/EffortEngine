<mah:MetroContentControl
    x:Class="EffortEngine.MVVM.Views.AddGeneralTaskView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Dialog:DialogParticipation.Register="{Binding}"
    d:DesignHeight="500"
    d:DesignWidth="700"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <mah:MetroTabControl
            HorizontalAlignment="Center"
            mah:HeaderedControlHelper.HeaderFontSize="24"
            mah:HeaderedControlHelper.HeaderFontWeight="DemiBold"
            Background="LightGray"
            SelectedIndex="{Binding SelectedTabIndex}">

            <mah:MetroTabItem Header="Życie">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ScrollViewer
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        VerticalScrollBarVisibility="Disabled">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <ContentControl Foreground="Black">
                                    <iconPacks:Ionicons
                                        Width="40"
                                        Height="40"
                                        Kind="PulseMD" />
                                </ContentControl>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="22"
                                    Style="{StaticResource TaskTextBlockStyle}"
                                    Text="Nowe zadanie w kategorii: Życie " />
                            </StackPanel>

                            <Grid Grid.Row="1" Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource TaskTextBlockStyle}"
                                    Text="Nazwa:" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource TaskTextBoxStyle}"
                                    Text="{Binding TaskName}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Style="{StaticResource TaskTextBlockStyle}"
                                    Text="Opis:" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="330"
                                    MinHeight="80"
                                    Margin="0,8,0,8"
                                    Style="{StaticResource TaskTextBoxStyle}"
                                    Text="{Binding TaskDescription}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    Style="{StaticResource TaskTextBlockStyle}"
                                    Text="Priorytet:" />
                                <StackPanel
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                                    <ComboBox
                                        Width="180"
                                        mah:ControlsHelper.FocusBorderBrush="Black"
                                        SelectedValue="{Binding TaskPriority}"
                                        SelectedValuePath="Content">
                                        <ComboBoxItem Content="Niski" />
                                        <ComboBoxItem Content="Średni" />
                                        <ComboBoxItem Content="Wysoki" />
                                    </ComboBox>

                                </StackPanel>
                                <StackPanel
                                    Grid.Row="3"
                                    Grid.ColumnSpan="2"
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal">

                                    <Button
                                        Width="75"
                                        Height="50"
                                        Command="{Binding AddTaskCommand}"
                                        Style="{StaticResource BigButtonStyle}">
                                        <iconPacks:PackIconMaterial
                                            Width="30"
                                            Height="30"
                                            Kind="ContentSave" />
                                    </Button>
                                    <Button
                                        Width="75"
                                        Height="50"
                                        Margin="8,0,0,0"
                                        Command="{Binding ResetCommand}"
                                        Style="{StaticResource BigButtonStyle}">
                                        <iconPacks:PhosphorIcons
                                            Width="30"
                                            Height="30"
                                            Kind="BroomBold" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </mah:MetroTabItem>

            <mah:MetroTabItem Header="Giełda">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ScrollViewer
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        VerticalScrollBarVisibility="Disabled">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <ContentControl Foreground="Black">
                                    <iconPacks:PackIconModern
                                        Width="40"
                                        Height="40"
                                        Kind="StockUp" />
                                </ContentControl>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    FontSize="22"
                                    Style="{StaticResource TaskTextBlockStyle}"
                                    Text="Nowe zadanie w kategorii: Giełda" />
                            </StackPanel>

                            <Grid Grid.Row="1" Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource TaskTextBlockStyle}"
                                    Text="Nazwa:" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource TaskTextBoxStyle}"
                                    Text="{Binding TaskName}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Style="{StaticResource TaskTextBlockStyle}"
                                    Text="Opis:" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="335"
                                    MinHeight="80"
                                    Margin="0,8,0,8"
                                    Style="{StaticResource TaskTextBoxStyle}"
                                    Text="{Binding TaskDescription}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    Style="{StaticResource TaskTextBlockStyle}"
                                    Text="Priorytet:" />
                                <StackPanel
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                                    <ComboBox
                                        Width="180"
                                        mah:ControlsHelper.FocusBorderBrush="Black"
                                        SelectedValue="{Binding TaskPriority}"
                                        SelectedValuePath="Content">
                                        <ComboBoxItem Content="Niski" />
                                        <ComboBoxItem Content="Średni" />
                                        <ComboBoxItem Content="Wysoki" />
                                    </ComboBox>

                                </StackPanel>
                                <StackPanel
                                    Grid.Row="3"
                                    Grid.ColumnSpan="2"
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal">

                                    <Button
                                        Width="75"
                                        Height="50"
                                        Command="{Binding AddTaskCommand}"
                                        Style="{StaticResource BigButtonStyle}">
                                        <iconPacks:PackIconMaterial
                                            Width="30"
                                            Height="30"
                                            Kind="ContentSave" />
                                    </Button>
                                    <Button
                                        Width="75"
                                        Height="50"
                                        Margin="8,0,0,0"
                                        Command="{Binding ResetCommand}"
                                        Style="{StaticResource BigButtonStyle}">
                                        <iconPacks:PhosphorIcons
                                            Width="30"
                                            Height="30"
                                            Kind="BroomBold" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </ScrollViewer>

                </Grid>
            </mah:MetroTabItem>

            <mah:MetroTabItem Header="System">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ScrollViewer
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        VerticalScrollBarVisibility="Disabled">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <ContentControl Foreground="Black">
                                    <iconPacks:PhosphorIcons
                                        Width="40"
                                        Height="40"
                                        Kind="HouseLineBold" />
                                </ContentControl>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    FontSize="22"
                                    Style="{StaticResource TaskTextBlockStyle}"
                                    Text="Nowe zadanie w kategorii: System" />
                            </StackPanel>

                            <Grid Grid.Row="1" Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource TaskTextBlockStyle}"
                                    Text="Nazwa:" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource TaskTextBoxStyle}"
                                    Text="{Binding TaskName}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Style="{StaticResource TaskTextBlockStyle}"
                                    Text="Opis:" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="340"
                                    MinHeight="80"
                                    Margin="0,8,0,8"
                                    Style="{StaticResource TaskTextBoxStyle}"
                                    Text="{Binding TaskDescription}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    Style="{StaticResource TaskTextBlockStyle}"
                                    Text="Priorytet:" />
                                <StackPanel
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                                    <ComboBox
                                        Width="180"
                                        mah:ControlsHelper.FocusBorderBrush="Black"
                                        SelectedValue="{Binding TaskPriority}"
                                        SelectedValuePath="Content">
                                        <ComboBoxItem Content="Niski" />
                                        <ComboBoxItem Content="Średni" />
                                        <ComboBoxItem Content="Wysoki" />
                                    </ComboBox>

                                </StackPanel>
                                <StackPanel
                                    Grid.Row="3"
                                    Grid.ColumnSpan="2"
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal">

                                    <Button
                                        Width="75"
                                        Height="50"
                                        Command="{Binding AddTaskCommand}"
                                        Style="{StaticResource BigButtonStyle}">
                                        <iconPacks:PackIconMaterial
                                            Width="30"
                                            Height="30"
                                            Kind="ContentSave" />
                                    </Button>
                                    <Button
                                        Width="75"
                                        Height="50"
                                        Margin="8,0,0,0"
                                        Command="{Binding ResetCommand}"
                                        Style="{StaticResource BigButtonStyle}">
                                        <iconPacks:PhosphorIcons
                                            Width="30"
                                            Height="30"
                                            Kind="BroomBold" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </mah:MetroTabItem>
        </mah:MetroTabControl>
    </Grid>

</mah:MetroContentControl>