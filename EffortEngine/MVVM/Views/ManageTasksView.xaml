<mah:MetroContentControl
    x:Class="EffortEngine.MVVM.Views.ManageTasksView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:Conv="clr-namespace:SharedProject.Converters;assembly=SharedProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:EffortEngine.MVVM.Views"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.5*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="DimGray" BorderThickness="2">

            <ContentControl Grid.Column="0" prism:RegionManager.RegionName="TaskTableRegion" />
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />

            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Height="30"
                        Padding="5"
                        Command="{Binding ShowAllTasksCommand}"
                        FontSize="12"
                        Style="{StaticResource BigButtonStyle}">
                        <TextBlock VerticalAlignment="Center" Text="Wszystkie" />
                    </Button>

                    <Button
                        Height="30"
                        Padding="5"
                        Command="{Binding ShowProgramsCommand}"
                        FontSize="12"
                        Style="{StaticResource BigButtonStyle}">
                        <TextBlock VerticalAlignment="Center" Text="Programy" />
                    </Button>

                    <Button
                        Height="30"
                        Padding="5"
                        Command="{Binding ShowAllProgrammingTasksCommand}"
                        FontSize="12"
                        Style="{StaticResource BigButtonStyle}">
                        <iconPacks:PackIconLucide
                            Width="12"
                            Height="12"
                            Kind="Hash" />
                    </Button>

                    <Button
                        Height="30"
                        Padding="5"
                        Command="{Binding ShowSystemTasksCommand}"
                        FontSize="12"
                        Style="{StaticResource BigButtonStyle}">
                        <TextBlock VerticalAlignment="Center" Text="System" />
                    </Button>

                    <Button
                        Height="30"
                        Padding="5"
                        Command="{Binding ShowStockMarketTasksCommand}"
                        FontSize="12"
                        Style="{StaticResource BigButtonStyle}">
                        <TextBlock VerticalAlignment="Center" Text="Giełda" />
                    </Button>

                    <Button
                        Height="30"
                        Padding="5"
                        Command="{Binding ShowLifeTasksCommand}"
                        FontSize="12"
                        Style="{StaticResource BigButtonStyle}">
                        <TextBlock VerticalAlignment="Center" Text="Życie" />
                    </Button>

                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" Orientation="Vertical">
                <TextBlock
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="DemiBold"
                    Text="Opis" />
                <TextBox
                    Width="auto"
                    Height="80"
                    Margin="5,0,5,0"
                    AcceptsReturn="True"
                    FontSize="10"
                    Text="{Binding TaskTableViewModel.SelectedTask.Description, Mode=TwoWay}" />
                <TextBlock
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="DemiBold"
                    Text="Notatka" />
                <TextBox
                    Width="auto"
                    Height="80"
                    Margin="5,0,5,0"
                    AcceptsReturn="True"
                    FontSize="10"
                    Text="{Binding TaskTableViewModel.SelectedTask.Notes, Mode=TwoWay}" />
            </StackPanel>

            <Button
                Grid.Row="2"
                Width="150"
                Height="38"
                Command="{Binding SaveTaskCommand}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Zapisz zmiany" />
                    <iconPacks:PackIconModern
                        Width="25"
                        Height="25"
                        Margin="5,0,5,0"
                        Kind="Save" />
                </StackPanel>
            </Button>

            <Button
                Grid.Row="3"
                Width="150"
                Height="38"
                Margin="0,1,0,0"
                HorizontalAlignment="Center"
                Command="{Binding StartWorkCommand}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Pracuj" />
                    <iconPacks:PackIconMaterialDesign
                        Width="25"
                        Height="25"
                        Margin="5,0,5,0"
                        Kind="WorkSharp" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>

</mah:MetroContentControl>
