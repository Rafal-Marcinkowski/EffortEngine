<mah:MetroContentControl
    x:Class="EffortEngine.MVVM.Views.AddTaskView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:Conv="clr-namespace:SharedProject.Converters;assembly=SharedProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:EffortEngine.MVVM.Views"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <DockPanel Margin="25">

            <Button
                Margin="0,0,10,0"
                Command="{Binding AddProgrammingTaskCommand}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="Programowanie" />
                    <iconPacks:PackIconPhosphorIcons
                        Width="30"
                        Height="30"
                        Margin="10,0,0,0"
                        Kind="HashBold" />
                </StackPanel>
            </Button>

            <Button
                Margin="0,0,10,0"
                Command="{Binding AddGeneralTaskCommand}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <iconPacks:PackIconModern
                        Width="30"
                        Height="30"
                        Kind="Stock" />
                    <TextBlock
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        Text="Giełda /" />

                    <TextBlock
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        Text="Życie" />
                    <iconPacks:Ionicons
                        Width="30"
                        Height="30"
                        Kind="PulseMD" />
                    <TextBlock
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        Text="/ System" />
                    <iconPacks:PhosphorIcons
                        Width="30"
                        Height="30"
                        Kind="HouseLineBold" />
                </StackPanel>
            </Button>
        </DockPanel>
    </Grid>

</mah:MetroContentControl>
