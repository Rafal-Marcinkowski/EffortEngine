<mah:MetroContentControl 
             x:Class="EffortEngine.MVVM.Views.AddSystemTaskView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EffortEngine.MVVM.Views"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:Conv="clr-namespace:SharedProject.Converters;assembly=SharedProject"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock
        Text="System"
        Foreground="DimGray"
        FontSize="28"
        Height="auto"
        Style="{StaticResource TextBlockStyle}"
        />

        <DockPanel Grid.Row="1" HorizontalAlignment="Center">

            <TextBlock 
      Text="Nazwa zadania: "
      FontSize="22"
      Height="auto"
      Foreground="Black"   
      Style="{StaticResource TextBlockStyle}"/>

            <TextBox 
         x:Name="systemTaskNameTextBox"
         FontSize="16"
         VerticalContentAlignment="Center"
         Width="485"
         Style="{StaticResource TextBoxStyle}"
         Text="{Binding SystemTaskName}"/>

        </DockPanel>

        <DockPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock 
      Text="Opis: "
      Height="auto"   
      FontSize="22"
         Foreground="black"
      Style="{StaticResource TextBlockStyle}"/>

            <TextBox 
         x:Name="systemTaskDescriptionTextBox"
         Width="500"
         FontSize="14"
         MinHeight="100"
         Height="auto"
         TextWrapping="Wrap"
         Style="{StaticResource TextBoxStyle}"
         Text="{Binding SystemTaskDescription}"/>

        </DockPanel>

        <DockPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock 
      Text="Priorytet: "
      Height="auto"
      Foreground="Black"
      FontSize="22"
      Style="{StaticResource TextBlockStyle}"/>

            <ComboBox 
         Width="150"
         Height="30"
         BorderBrush="DimGray"
         BorderThickness="2"
         Controls:ControlsHelper.FocusBorderBrush="Black"
         Controls:ControlsHelper.CornerRadius="7" 
         Controls:ControlsHelper.MouseOverBorderBrush="Gray"
           SelectedValue="{Binding SelectedPriority, UpdateSourceTrigger=PropertyChanged}"
  SelectedValuePath="Content"
         FontFamily="Calibri"
         FontWeight="DemiBold"
         HorizontalContentAlignment="Center">

                <ComboBoxItem>Niski</ComboBoxItem>
                <ComboBoxItem>Średni</ComboBoxItem>
                <ComboBoxItem>Wysoki</ComboBoxItem>
            </ComboBox>

            <Button
         Style="{StaticResource BigButtonStyle}"
         Command="{Binding AddSystemTaskCommand}"
         Width="100"
         Margin="50,0,0,0">
                <iconPacks:PackIconMaterial Kind="ContentSave" Width="30" Height="30"/>
            </Button>

        </DockPanel>

    </Grid>

</mah:MetroContentControl>
